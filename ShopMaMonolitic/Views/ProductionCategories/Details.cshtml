@using Microsoft.EntityFrameworkCore
@model ShopMaMonolitic.Data.Models.ProductionCategoriesModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details: @Model.CategoryName</h1>

<div>

    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor( model => model.CategoryId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model=> model.CreateDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CreaterUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreaterUser)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.modify_date)
        </dt>
        <dd class="col-sm-10">
            @{
            if (Model.modify_date == null )
            {
            <span>No ha sido modificado</span>
            }
            else
            {
            @Html.DisplayFor(model => model.modify_date)
            }
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.modify_user)
        </dt>
        <dd class="col-sm-10">
            @{
            if (Model.modify_user == null ) // Suponiendo que modify_user es de tipo int
            {
            <span>No ha sido modificado</span>
            }
            else
            {
            @Html.DisplayFor(model => model.modify_user)
            }
            }
        </dd>

    </dl>
</div>
<div>
    @Html.ActionLink("Edit","Edit",new { id = Model.CategoryId}) |
    <a asp-action="Index">Back to List</a>
</div>
